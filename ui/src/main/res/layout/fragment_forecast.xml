<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <Button
            android:id="@+id/backBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:contentDescription="@string/backbtn"
            style="@style/Widget.Material3.Button.IconButton.Filled"
            app:icon="@drawable/baseline_keyboard_backspace_48"
            android:drawableTint="@color/white"
            />



        <TextView
            android:id="@+id/dateTxtView"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:textColor="@color/white"
            android:layout_marginEnd="16dp"
            android:text="11 августа"
            />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">



                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_height"

                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:backgroundTint="?attr/cardBackgroundColor"
                        >

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/conditionLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/conditionImage"
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:src="@drawable/icon_cloud"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/conditionGuideLine"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/conditionGuideLine"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.3" />


                            <TextView
                                android:id="@+id/conditionValue"
                                style="@style/TextAppearance.Material3.BodySmall.ForecastText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Солнечно"
                                android:ellipsize="end"
                                android:textColor="?attr/colorPrimary"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toTopOf="@+id/avgTempValue"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/conditionGuideLine"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.5"
                                app:layout_constraintVertical_chainStyle="packed" />

                            <TextView
                                android:id="@+id/avgTempValue"
                                style="@style/TextAppearance.Material3.BodyLarge.ForecastTextValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="18"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/conditionGuideLine"
                                app:layout_constraintTop_toBottomOf="@+id/conditionValue"
                                app:layout_constraintVertical_bias="0.5" />


                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="8dp"
                        android:backgroundTint="?attr/cardBackgroundColor"
                        android:layout_weight="1"
                        >
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/avgHumidityLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/avgHumGuideLine"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.3" />

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:src="@drawable/icon_drop"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/avgHumGuideLine"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:tint="@color/forecastImageColor" />


                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/avgHumGuideLine"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/avgHumidityTxtView"
                                    style="@style/TextAppearance.Material3.BodySmall.ForecastText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Влажность"
                                    android:textColor="?attr/colorPrimary"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/avgHumidityValue"
                                    style="@style/TextAppearance.Material3.BodyLarge.ForecastTextValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="15" />
                            </androidx.appcompat.widget.LinearLayoutCompat>


                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>



                </androidx.appcompat.widget.LinearLayoutCompat>




            <androidx.cardview.widget.CardView
                app:cardCornerRadius="8dp"
                android:layout_marginTop="16dp"

                android:backgroundTint="?attr/cardBackgroundColor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_height">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/hoursRecView"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    tools:listitem="@layout/hour_item"
                    />
            </androidx.cardview.widget.CardView>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_height"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="?attr/cardBackgroundColor"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="8dp"
                        >
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/maxTempLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"

                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/hotTempImgView"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/icon_temp_hot"
                                app:tint="@color/forecastImageColor" />


                            <TextView
                                android:id="@+id/maxTempTxtView"
                                style="@style/TextAppearance.Material3.BodySmall.ForecastText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Макс. температура"
                                android:layout_marginTop="8dp"
                                android:layout_gravity="center" />

                            <TextView
                                android:id="@+id/maxTempValue"
                                style="@style/TextAppearance.Material3.BodyLarge.ForecastTextValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="24"
                                app:layout_constraintEnd_toEndOf="@+id/maxTempTxtView"
                                app:layout_constraintStart_toStartOf="@+id/maxTempTxtView"
                                app:layout_constraintTop_toBottomOf="@+id/maxTempTxtView" />


                        </androidx.appcompat.widget.LinearLayoutCompat>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="?attr/cardBackgroundColor"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="8dp"
                        >
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/minTempLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/minTempImgView"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/icon_temp"
                                app:layout_constraintBottom_toBottomOf="@+id/minTempValue"
                                app:layout_constraintEnd_toStartOf="@+id/minTempTxtView"
                                app:layout_constraintTop_toTopOf="@+id/minTempTxtView"
                                app:tint="@color/forecastImageColor" />


                            <TextView
                                android:id="@+id/minTempTxtView"
                                style="@style/TextAppearance.Material3.BodySmall.ForecastText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="8dp"
                                android:text="Мин. температура" />

                            <TextView
                                android:id="@+id/minTempValue"
                                style="@style/TextAppearance.Material3.BodyLarge.ForecastTextValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="24" />

                        </androidx.appcompat.widget.LinearLayoutCompat>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>




            <androidx.cardview.widget.CardView
                app:cardCornerRadius="8dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="?attr/cardBackgroundColor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_height">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:orientation="horizontal"
                   >

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/sunriseLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_sunrise"
                            app:layout_constraintStart_toStartOf="@+id/minTempImgView"
                            app:layout_constraintTop_toTopOf="@+id/totalPrecipTxtView"
                            app:tint="@color/forecastImageColor" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"

                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/sunRiseTxtView"
                                style="@style/TextAppearance.Material3.BodySmall.ForecastText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Восход" />

                            <TextView
                                android:id="@+id/sunRiseValue"
                                style="@style/TextAppearance.Material3.BodyLarge.ForecastTextValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15" />

                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/sunSetLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="@+id/guideline3"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_sunset"
                            app:layout_constraintStart_toStartOf="@+id/minTempImgView"
                            app:layout_constraintTop_toTopOf="@+id/totalPrecipTxtView"
                            app:tint="@color/forecastImageColor" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"

                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/sunSetTxtView"
                                style="@style/TextAppearance.Material3.BodySmall.ForecastText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Закат" />

                            <TextView
                                android:id="@+id/sunSetValue"
                                style="@style/TextAppearance.Material3.BodyLarge.ForecastTextValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15" />

                        </androidx.appcompat.widget.LinearLayoutCompat>


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <TextView
                            android:id="@+id/uvIndexTxtView"
                            style="@style/TextAppearance.Material3.BodySmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="@string/uv_index"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/uvIndexValue"
                            style="@style/TextAppearance.Material3.BodyLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="2"
                            android:textColor="@color/forecastImageColor"
                            app:layout_constraintBottom_toBottomOf="@+id/uvIndexTxtView"
                            app:layout_constraintStart_toEndOf="@+id/uvIndexTxtView" />

                    </LinearLayout>


                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"


                        app:layout_constraintGuide_percent="0.5" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_height"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                   >

                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="8dp"
                        android:backgroundTint="?attr/cardBackgroundColor"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/precipationLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/precipImageView"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:src="@drawable/icon_precipation"
                                android:layout_marginStart="8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:tint="@color/forecastImageColor" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/guideline4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.3" />


                            <TextView
                                android:id="@+id/totalPrecipTxtView"
                                style="@style/TextAppearance.Material3.BodySmall.ForecastText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Осадки"
                                app:layout_constraintBottom_toTopOf="@+id/totalPrecipValue"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/guideline4"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.5"
                                app:layout_constraintVertical_chainStyle="packed" />

                            <TextView
                                android:id="@+id/totalPrecipValue"
                                style="@style/TextAppearance.Material3.BodyLarge.ForecastTextValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="15"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="@+id/totalPrecipTxtView"
                                app:layout_constraintStart_toStartOf="@+id/totalPrecipTxtView"
                                app:layout_constraintTop_toBottomOf="@+id/totalPrecipTxtView"
                                app:layout_constraintVertical_bias="0.5" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="8dp"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="?attr/cardBackgroundColor"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/maxWindSpeedLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/maxWindSpeedImgView"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:src="@drawable/icon_wind"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/maxWindGuideLine"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:tint="@color/forecastImageColor" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/maxWindGuideLine"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.3" />


                            <TextView
                                android:id="@+id/maxWindSpeedTxtView"
                                style="@style/TextAppearance.Material3.BodySmall.ForecastText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Ветер макс."
                                app:layout_constraintBottom_toTopOf="@+id/maxWindSpeedValue"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/maxWindGuideLine"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.5"
                                app:layout_constraintVertical_chainStyle="packed" />

                            <TextView
                                android:id="@+id/maxWindSpeedValue"
                                style="@style/TextAppearance.Material3.BodyLarge.ForecastTextValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="24 км/ч"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/maxWindGuideLine"
                                app:layout_constraintTop_toBottomOf="@+id/maxWindSpeedTxtView"
                                app:layout_constraintVertical_bias="0.5" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_height"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    >

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="8dp"
                android:backgroundTint="?attr/cardBackgroundColor"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/avgvisLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/icon_raining"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/avgGuideLine"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/forecastImageColor" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/avgGuideLine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.3" />


                    <TextView
                        android:id="@+id/precipChanceTxtView"
                        style="@style/TextAppearance.Material3.BodySmall.ForecastText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"

                        android:ellipsize="end"
                        android:lines="1"
                        android:text="Вер.осадков"
                        app:layout_constraintBottom_toTopOf="@+id/precipChanceValue"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/avgGuideLine"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.5"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/precipChanceValue"
                        style="@style/TextAppearance.Material3.BodyLarge.ForecastTextValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="15%"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/precipChanceTxtView"
                        app:layout_constraintStart_toStartOf="@+id/precipChanceTxtView"
                        app:layout_constraintTop_toBottomOf="@+id/precipChanceTxtView"
                        app:layout_constraintVertical_bias="0.5" />


                </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="8dp"
                        android:backgroundTint="?attr/cardBackgroundColor"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/pressureLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:src="@drawable/icon_visibility"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/pressureGuideLine"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:tint="@color/forecastImageColor" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/pressureGuideLine"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.3" />

                            <TextView
                                android:id="@+id/avgvisTxtView"
                                style="@style/TextAppearance.Material3.BodySmall.ForecastText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ср. видимость"
                                app:layout_constraintBottom_toTopOf="@+id/avgvisValue"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/pressureGuideLine"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.5"
                                app:layout_constraintVertical_chainStyle="packed" />

                            <TextView
                                android:id="@+id/avgvisValue"
                                style="@style/TextAppearance.Material3.BodyLarge.ForecastTextValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="15"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/pressureGuideLine"
                                app:layout_constraintTop_toBottomOf="@+id/avgvisTxtView"
                                app:layout_constraintVertical_bias="0.5" />


                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>





            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_height"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="?attr/cardBackgroundColor"
                app:cardCornerRadius="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    >


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/moonSetLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/moonGuideLine"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_moonset"
                            app:layout_constraintStart_toStartOf="@+id/minTempImgView"
                            app:layout_constraintTop_toTopOf="@+id/totalPrecipTxtView"
                            app:tint="@color/forecastImageColor" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"

                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/moonSetTxtView"
                                style="@style/TextAppearance.Material3.BodySmall.ForecastText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Закат луны" />

                            <TextView
                                android:id="@+id/moonSetValue"
                                style="@style/TextAppearance.Material3.BodyLarge.ForecastTextValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15" />

                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/moonGuideLine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />



                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/moonRiseLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_moonrise"
                            app:layout_constraintStart_toStartOf="@+id/minTempImgView"
                            app:layout_constraintTop_toTopOf="@+id/totalPrecipTxtView"
                            app:tint="@color/forecastImageColor" />


                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"

                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/moonRiseTxtView"
                                style="@style/TextAppearance.Material3.BodySmall.ForecastText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Восход луны" />

                            <TextView
                                android:id="@+id/moonRiseValue"
                                style="@style/TextAppearance.Material3.BodyLarge.ForecastTextValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15" />

                        </androidx.appcompat.widget.LinearLayoutCompat>


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <TextView
                        android:id="@+id/moonPhaseTxtView"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Фаза луны"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/moonRiseLayout" />

                    <TextView
                        android:id="@+id/moonPhaseValue"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="@+id/moonPhaseTxtView"
                        app:layout_constraintStart_toEndOf="@+id/moonPhaseTxtView" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>


</LinearLayout>