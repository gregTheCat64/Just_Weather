<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="72dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/dateTxtView"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"

                android:layout_marginBottom="8dp"
                android:textColor="@color/white" />


            <androidx.cardview.widget.CardView
                android:id="@+id/conditionCardView"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:backgroundTint="?attr/cardBackgroundColor"
                app:cardCornerRadius="8dp">


                <ImageView
                    android:id="@+id/conditionImage"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="8dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/conditionGuideLine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.2" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="64dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/mainTextView"
                        style="@style/TextAppearance.Material3.LabelLarge.ForecastLargeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center"
                        android:maxWidth="196dp"
                        android:lines="1"
                        android:ellipsize="end"

                        android:textColor="?attr/colorPrimary" />

                    <TextView
                        android:id="@+id/conditionValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:lines="2"
                        android:maxWidth="196dp"

                        android:ellipsize="end"
                        android:textColor="@color/light_text_secondary" />

                </androidx.appcompat.widget.LinearLayoutCompat>



                <TextView
                    android:id="@+id/avgTempValue"
                    style="@style/TextAppearance.Material3.LabelLarge.ForecastLargeTextValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"

                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:textSize="32sp"
                    android:textStyle="bold"
                     />

                <TextView
                    android:id="@+id/tempExtremumValues"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/light_text_secondary"
                    android:layout_gravity="end|bottom"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="8dp"
                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/hoursCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="?attr/cardBackgroundColor"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toBottomOf="@id/conditionCardView">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/hoursRecView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/hour_item" />
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/precipLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/little_card_view_height"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hoursCardView">

                <androidx.cardview.widget.CardView
                    android:id="@+id/precipCardView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/cardBackgroundColor"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/hoursCardView">


                    <ImageView
                        android:id="@+id/precipImageView"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:src="@drawable/icon_precipation"
                        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/linearLayout2"
                        app:tint="@color/forecastImageColor" />


                    <TextView
                        android:id="@+id/totalPrecipTxtView"
                        style="@style/TextAppearance.Material3.LabelMedium.ForecastMediumText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center_horizontal"
                        android:layout_marginTop="8dp"
                        android:text="@string/Precipations"
                        app:layout_constraintStart_toStartOf="@+id/guideline4"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/totalPrecipValue"
                        style="@style/TextAppearance.Material3.LabelLarge.ForecastLargeTextValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guideline4"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/precipChanceValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:textSize="12sp"
                        android:ellipsize="end"
                        android:textColor="@color/light_text_secondary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/cardBackgroundColor"
                    app:cardCornerRadius="8dp">


                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/icon_humidity"
                        app:tint="@color/forecastImageColor" />


                    <TextView
                        android:id="@+id/avgHumidityTxtView"
                        style="@style/TextAppearance.Material3.LabelMedium.ForecastMediumText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center_horizontal"
                        android:layout_margin="8dp"
                        android:ellipsize="end"
                        android:text="@string/humidity"
                        android:textColor="?attr/colorPrimary" />

                    <TextView
                        android:id="@+id/avgHumidityValue"
                        style="@style/TextAppearance.Material3.LabelLarge.ForecastLargeTextValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"

                         />


                </androidx.cardview.widget.CardView>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/windLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/little_card_view_height"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/precipLayout">

                <androidx.cardview.widget.CardView
                    android:id="@+id/windCardView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/little_card_view_height"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/cardBackgroundColor"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/precipLayout">


                    <ImageView
                        android:id="@+id/maxWindSpeedImgView"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/icon_wind"
                        app:tint="@color/forecastImageColor" />


                    <TextView
                        android:id="@+id/maxWindSpeedTxtView"
                        style="@style/TextAppearance.Material3.LabelMedium.ForecastMediumText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center_horizontal"
                        android:layout_marginTop="8dp"
                        android:ellipsize="end"
                        android:text="@string/wind" />

                    <TextView
                        android:id="@+id/maxWindSpeedValue"
                        style="@style/TextAppearance.Material3.LabelLarge.ForecastLargeTextValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                         />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/little_card_view_height"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/cardBackgroundColor"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintStart_toEndOf="@id/windCardView"
                    app:layout_constraintTop_toTopOf="@id/windCardView">


                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/icon_visibility"
                        app:tint="@color/forecastImageColor" />


                    <TextView
                        android:id="@+id/avgvisTxtView"
                        style="@style/TextAppearance.Material3.LabelMedium.ForecastMediumText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center_horizontal"
                        android:layout_marginTop="8dp"
                        android:ellipsize="end"
                        android:text="@string/visibility" />

                    <TextView
                        android:id="@+id/avgvisValue"
                        style="@style/TextAppearance.Material3.LabelLarge.ForecastLargeTextValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"

                         />


                </androidx.cardview.widget.CardView>

            </androidx.appcompat.widget.LinearLayoutCompat>




            <androidx.cardview.widget.CardView
                android:id="@+id/sunCardView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_height"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:backgroundTint="?attr/cardBackgroundColor"
                app:cardCornerRadius="8dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="start|center_vertical"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/icon_sun_up"
                            app:tint="@color/forecastImageColor" />

                        <TextView
                            android:id="@+id/sunRiseTxtView"
                            style="@style/TextAppearance.Material3.LabelMedium.ForecastMediumText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|center_horizontal"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="8dp"
                            android:text="@string/sunrise" />

                        <TextView
                            android:id="@+id/sunRiseValue"
                            style="@style/TextAppearance.Material3.LabelLarge.ForecastLargeTextValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="4dp"
                            />

                        <TextView
                            android:id="@+id/uvIndexTxtView"
                            style="@style/TextAppearance.Material3.BodySmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|bottom"
                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="4dp"
                            android:text="@string/uv_index" />

                        <TextView
                            android:id="@+id/uvIndexValue"
                            style="@style/TextAppearance.Material3.BodySmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="4dp"

                            android:textColor="@color/white"

                            />
                    </FrameLayout>


                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="start|center_vertical"
                            android:layout_marginStart="12dp"
                            android:src="@drawable/icon_sun_down"
                            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
                            app:layout_constraintStart_toStartOf="@+id/guideline3"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/forecastImageColor" />


                        <TextView
                            android:id="@+id/sunSetTxtView"
                            style="@style/TextAppearance.Material3.LabelMedium.ForecastMediumText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|center_horizontal"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="8dp"
                            android:text="@string/sunset"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageView4"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/sunSetValue"
                            style="@style/TextAppearance.Material3.LabelLarge.ForecastLargeTextValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="4dp"

                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/sunSetTxtView"
                            app:layout_constraintStart_toStartOf="@+id/sunSetTxtView"
                            app:layout_constraintTop_toTopOf="parent" />

                    </FrameLayout>


                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_height"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="?attr/cardBackgroundColor"
                app:cardCornerRadius="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sunCardView">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="start|center_vertical"
                            android:layout_marginStart="4dp"
                            android:src="@drawable/icon_moon_up"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/forecastImageColor" />

                        <TextView
                            android:id="@+id/moonRiseTxtView"
                            style="@style/TextAppearance.Material3.LabelMedium.ForecastMediumText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|center_horizontal"
                            android:layout_marginTop="8dp"
                            android:ellipsize="end"
                            android:text="@string/moonrise" />

                        <TextView
                            android:id="@+id/moonRiseValue"
                            style="@style/TextAppearance.Material3.LabelLarge.ForecastLargeTextValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                             />


                    </FrameLayout>


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="start|center_vertical"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/icon_moon_down"
                            app:layout_constraintStart_toStartOf="@+id/minTempImgView"
                            app:layout_constraintTop_toTopOf="@+id/totalPrecipTxtView"
                            app:tint="@color/forecastImageColor" />

                        <TextView
                            android:id="@+id/moonSetTxtView"
                            style="@style/TextAppearance.Material3.LabelMedium.ForecastMediumText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|center_horizontal"
                            android:layout_marginTop="8dp"
                            android:text="@string/moonset" />

                        <TextView
                            android:id="@+id/moonSetValue"
                            style="@style/TextAppearance.Material3.LabelLarge.ForecastLargeTextValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                             />
                    </FrameLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/moonPhaseTxtView"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="Фаза луны"
                         />

                    <TextView
                        android:id="@+id/moonPhaseValue"
                        style="@style/TextAppearance.Material3.BodySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/white"
                         />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_anchor="@+id/nestedScrollView"
        app:layout_anchorGravity="center"
        app:layout_collapseMode="pin"
        app:layout_scrollFlags="scroll|enterAlways">

        <Button
            android:id="@+id/backBtn"
            style="@style/Widget.Material3.Button.IconButton.Filled"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:contentDescription="@string/backbtn"
            android:drawableTint="@color/white"
            app:icon="@drawable/baseline_keyboard_backspace_48" />


    </FrameLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>